<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="650dp"
    android:background="@android:color/transparent"
    android:padding="16dp"
    android:layout_gravity="center"
    android:layout_centerInParent="true">

    <LinearLayout
        android:id="@+id/contenedorPrincipal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/fondo_nombres"
        android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="-28dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/toro_izquierdo"
            android:contentDescription="Toro izquierdo"/>

        <!-- EditText Jugador 1 -->
        <EditText
            android:id="@+id/editJugador1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jugador 1"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:textColor="#1243A6"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"/>


    </LinearLayout>

        <!-- Filita de toros -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/textVS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sports_world_regular"
                android:gravity="center"
                android:text="VS"
                android:textColor="#870F54"
                android:textSize="52sp" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="-20dp">

        <!-- EditText Jugador 2 -->
        <EditText
            android:id="@+id/editJugador2"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Jugador 2"
            android:padding="12dp"
            android:textColor="#1243A6"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/toro_derecho"
            android:contentDescription="Toro derecho"/>
    </LinearLayout>


        <!-- BotÃ³n Guardar -->
        <Button
            android:id="@+id/btnGuardarNombres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:backgroundTint="#870F54"
            android:textColor="#FEC526"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
