<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="48dp"
    android:paddingBottom="48dp"
    android:weightSum="6"
    android:background="@drawable/fondo_puzzle">



    <!-- Bloque 1: Tiempo y botón fácil -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="Tiempo: --"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/txtTiempoPuzzle1"

        android:background="@drawable/timer_background"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_marginBottom="16dp"/>

    <ImageButton
        android:id="@+id/puzzle1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="Fácil"
        android:scaleType="fitCenter"
        android:src="@drawable/puzzle_1" />



    <!-- Bloque 2: Tiempo y botón medio -->
    <Space
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="Tiempo: --"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/txtTiempoPuzzle2"

        android:background="@drawable/timer_background"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_marginBottom="16dp"/>

    <!-- Bloque 3: Tiempo y botón difícil -->

    <ImageButton
        android:id="@+id/puzzle2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="Media"
        android:scaleType="fitCenter"
        android:src="@drawable/puzzle_2" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="Tiempo: --"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/txtTiempoPuzzle3"
        android:background="@drawable/timer_background"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_marginBottom="16dp"/>

    <ImageButton
        android:id="@+id/puzzle3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/puzzle_3"
        android:contentDescription="Difícil"
        android:background="@android:color/transparent"/>



</LinearLayout>