<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoregistro"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#1243A6" />
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#FEC526"
                android:layout_marginBottom="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:src="@drawable/registro"
                android:layout_marginBottom="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#0E2159"
                android:layout_marginBottom="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre completo"
                    android:textColorHint="@color/rosaupt"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_regular" />

                <EditText
                    android:id="@+id/etEdad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edad"
                    android:textColorHint="@color/rosaupt"
                    android:padding="12dp"
                    android:inputType="number"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona tu género:"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_regular" />

                <RadioGroup
                    android:id="@+id/radioGroupGenero"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <RadioButton
                        android:id="@+id/radio_masculino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Masculino"
                        android:fontFamily="@font/montserrat_regular" />

                    <RadioButton
                        android:id="@+id/radio_femenino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Femenino"
                        android:fontFamily="@font/montserrat_regular" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona tu escuela preparatoria:"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/montserrat_regular" />

                <Spinner
                    android:id="@+id/spinnerEscuela"
                    android:textColor="@color/rosaupt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona tu carrera de interes:"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/montserrat_regular" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/check_sistemas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Ingeniería en Sistemas Computacionales"
                        android:fontFamily="@font/montserrat_regular" />

                    <CheckBox
                        android:id="@+id/check_civil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Ingeniería Civil"
                        android:fontFamily="@font/montserrat_regular" />

                    <CheckBox
                        android:id="@+id/check_industrial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Ingeniería Industrial"
                        android:fontFamily="@font/montserrat_regular" />

                    <CheckBox
                        android:id="@+id/check_robotica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Ingeniería Robótica"
                        android:fontFamily="@font/montserrat_regular" />

                    <CheckBox
                        android:id="@+id/check_tecnologias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Ingeniería en Tecnologías y Manufactura"
                        android:fontFamily="@font/montserrat_regular" />

                    <CheckBox
                        android:id="@+id/check_electronica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Ingeniería en Electrónica y Telecomunicaciones"
                        android:fontFamily="@font/montserrat_regular" />

                    <CheckBox
                        android:id="@+id/check_gestionEm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Licenciatura en Gestión Empresarial"
                        android:fontFamily="@font/montserrat_regular" />

                    <CheckBox
                        android:id="@+id/check_negocios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Licenciatura en Negocios Internacionales"
                        android:fontFamily="@font/montserrat_regular" />

                    <CheckBox
                        android:id="@+id/check_financiera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Ingeniería Financiera"
                        android:fontFamily="@font/montserrat_regular" />

                    <CheckBox
                        android:id="@+id/check_psicologia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Psicología"
                        android:fontFamily="@font/montserrat_regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selecciona otras opciones:"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat_regular" />

                    <EditText
                        android:id="@+id/etOtro"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Otro"
                        android:textColorHint="@color/rosaupt"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_regular" />
                </LinearLayout>

                <EditText
                    android:id="@+id/etCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo electrónico"
                    android:padding="12dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="16dp"
                    android:textColorHint="@color/rosaupt"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_regular" />

                <EditText
                    android:id="@+id/etTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Teléfono (10 dígitos)"
                    android:textColorHint="@color/rosaupt"
                    android:padding="12dp"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_regular" />

                <Button
                    android:id="@+id/btnEnviar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enviar"
                    android:textSize="20dp"
                    android:textColor="#f2f2f2"
                    android:backgroundTint="@color/rosaupt"
                    android:padding="12dp"
                    android:fontFamily="@font/montserrat_regular" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FEC526"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#1243A6" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
